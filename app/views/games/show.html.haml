.row{ :'ng-app' => "battleship" }
  .col-md-6.col-md-offset-1
    .row.game_board{ :'ng-controller' => "GameController as game", :'ng-init' => "init(#{@game.id})" }
      .col-xs-1
      - ('A'..'J').each do |coord|
        .col-xs-1.cell.label= coord
    - @game.board.each_with_index do |row, row_index|
      .row
        .col-xs-1.cell.label
          %h6= row_index + 1
        -row.each_with_index do |cell, cell_index|
          %a.col-xs-1.cell{ :'ng-controller' => "CellController", :'ng-init' => "init(#{row_index}, #{cell_index}, '#{cell[:status]}')", :'ng-class' => "status", :'ng-click' => "fire()" }
